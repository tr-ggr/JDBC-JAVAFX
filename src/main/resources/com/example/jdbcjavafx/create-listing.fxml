<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="593.0" prefWidth="373.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jdbcjavafx.CreateListing">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="List Product">
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
            <font>
                <Font name="Arial Bold" size="53.0" />
            </font>
        </Label>
      <Label text="Listing an item has an added tax of 5% from the Cost" />
        <FlowPane alignment="CENTER" hgap="10.0" prefHeight="27.0" prefWidth="244.0" vgap="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="83.0" text="Product Name" />
                <TextField id="txtUsername" fx:id="txtProductName" minWidth="-Infinity" prefHeight="26.0" prefWidth="170.0" />
            </children>
        </FlowPane>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="27.0" prefWidth="244.0" vgap="10.0">
         <children>
            <Label prefHeight="18.0" prefWidth="83.0" text="Cost" />
            <TextField id="txtUsername" fx:id="txtCost" minWidth="-Infinity" prefHeight="26.0" prefWidth="170.0" />
         </children>
      </FlowPane>
        <Button id="btnLogin" fx:id="btnListProduct" mnemonicParsing="false" onMouseClicked="#ListProduct" prefHeight="26.0" prefWidth="254.0" text="List Product">
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </Button>
        <Button id="btnRegister" fx:id="btnBack" mnemonicParsing="false" onMouseClicked="#GoBack" prefHeight="26.0" prefWidth="254.0" text="Go Back" />
    </children>
</VBox>
