<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" prefHeight="593.0" prefWidth="373.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jdbcjavafx.RegisterPage">
   <children>
      <Label text="REGISTER">
         <font>
            <Font name="Arial Bold" size="53.0" />
         </font>
      </Label>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="27.0" prefWidth="244.0" vgap="10.0">
         <children>
            <Label prefHeight="18.0" prefWidth="61.0" text="Username" />
            <TextField fx:id="txtUsername" minWidth="-Infinity" prefHeight="26.0" prefWidth="170.0" />
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="27.0" prefWidth="244.0" vgap="10.0">
         <children>
            <Label prefHeight="18.0" prefWidth="61.0" text="Password" />
            <PasswordField fx:id="txtPassword" minWidth="-Infinity" prefHeight="26.0" prefWidth="171.0" />
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER" hgap="40.0" prefHeight="27.0" prefWidth="295.0" vgap="10.0">
         <children>
            <Label prefHeight="18.0" prefWidth="61.0" text="Purpose" />
            <RadioButton fx:id="rbBuyer" mnemonicParsing="false" text="Buyer">
               <toggleGroup>
                  <ToggleGroup fx:id="Type" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbSeller" mnemonicParsing="false" text="Seller" toggleGroup="$Type" />
         </children>
      </FlowPane>
      <Button fx:id="btnRegister" mnemonicParsing="false" onMouseClicked="#Register" prefHeight="26.0" prefWidth="254.0" text="Register" />
      <Label text="Already have an Account?" />
      <Button fx:id="btnLogin" mnemonicParsing="false" onMouseClicked="#GoToLogin" prefHeight="26.0" prefWidth="246.0" text="Go To Login Page" />
   </children>
</VBox>
