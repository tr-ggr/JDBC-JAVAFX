<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="593.0" prefWidth="373.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jdbcjavafx.AddCredits">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Add Credits">
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
            <font>
                <Font name="Arial Bold" size="53.0" />
            </font>
        </Label>
      <Label fx:id="lblCredits" alignment="CENTER" prefHeight="38.0" prefWidth="235.0" text="Owned Credits: ">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
          <Label alignment="CENTER" prefHeight="38.0" prefWidth="235.0" text="How many credits?">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
          <TextField id="txtUsername" fx:id="txtCredits" minWidth="-Infinity" prefHeight="26.0" prefWidth="170.0" />
        <Button id="btnLogin" fx:id="btnDeposit" mnemonicParsing="false" onMouseClicked="#Deposit" prefHeight="26.0" prefWidth="254.0" text="Deposit">
            <VBox.margin>
                <Insets top="50.0" />
            </VBox.margin>
        </Button>
        <Button id="btnRegister" fx:id="btnBack" mnemonicParsing="false" onMouseClicked="#GoBack" prefHeight="26.0" prefWidth="254.0" text="Go Back" />
    </children>
</VBox>
